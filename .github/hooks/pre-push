#!/bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

# Run Maven build (or any checks you want before pushing)
mvn clean install

# Check if the Maven build was successful
if [ $? -ne 0 ]; then
  echo -e "${RED}Error:${NC} Maven build failed. Push aborted." >&2
  exit 1
fi

echo -e "${GREEN}Maven build succeeded. Proceeding with push.${NC}"
exit 0
