<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="isGitHub">${env:GITHUB_ACTIONS:-false}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] %-60logger{60} - %msg%n"/>
        </Console>

        <GitHubAnnotationAppender name="GitHub"/>

        <Routing name="ConditionalRouting">
            <Routes pattern="${isGitHub}">
                <Route key="true" ref="GitHub"/>
                <Route key="false" ref="Console"/>
                <Route key="default" ref="Console"/>
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConditionalRouting"/>
        </Root>
    </Loggers>
</Configuration>
